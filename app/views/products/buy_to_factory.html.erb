<p id="notice"><%= notice %></p>

<h1>Comprar <%= @product.name %> a Fabrica </h1>

<%= form_tag(post_buy_to_factory_product_path(id: @product.id)) do %>

    <div class="field">
      <%= label_tag :cantidad %>
      <%= number_field_tag :quantity %>
    </div>

    <div class="field">
      <%= label_tag :tiempo_maximo %>
      <%= number_field_tag :maximum_time %>
    </div>

    <div class="actions">
      <%= submit_tag%>
    </div>
<% end %>

<%= link_to 'Back', products_path %>