<p id="notice"><%= notice %></p>

<h1>Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Orderid</th>
      <th>Channel</th>
      <th>Supplier</th>
      <th>Client</th>
      <th>Sku</th>
      <th>Quantity</th>
      <th>Dispatchedquantity</th>
      <th>Unitprice</th>
      <th>Deadline</th>
      <th>State</th>
      <th>Rejectioncause</th>
      <th>Cancellationcause</th>
      <th>Notes</th>
      <th>Billid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.orderId %></td>
        <td><%= purchase_order.channel %></td>
        <td><%= purchase_order.supplier %></td>
        <td><%= purchase_order.client %></td>
        <td><%= purchase_order.sku %></td>
        <td><%= purchase_order.quantity %></td>
        <td><%= purchase_order.dispatchedQuantity %></td>
        <td><%= purchase_order.unitPrice %></td>
        <td><%= purchase_order.deadline %></td>
        <td><%= purchase_order.state %></td>
        <td><%= purchase_order.rejectionCause %></td>
        <td><%= purchase_order.cancellationCause %></td>
        <td><%= purchase_order.notes %></td>
        <td><%= purchase_order.billId %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

